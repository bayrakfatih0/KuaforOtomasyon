@model Berber.Models.Calisan

@{
    ViewData["Title"] = "Çalışanı Düzenle";
}

<h1>Çalışanı Düzenle</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* GİZLİ ID ALANI (Çok Önemli) *@
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="AdSoyad" class="control-label"></label>
                <input asp-for="AdSoyad" class="form-control" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UzmanlikAlanlari" class="control-label"></label>
                <input asp-for="UzmanlikAlanlari" class="form-control" />
                <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalonId" class="control-label">Salon</label>
                <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
                <span asp-validation-for="SalonId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}