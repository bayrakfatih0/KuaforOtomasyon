@model IEnumerable<Berber.Models.Calisan>

@{
    ViewData["Title"] = "Çalışan Yönetimi";
}

<h1>Çalışan Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Çalışan Ekle</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık Alanları</th>
            <th>Salon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AdSoyad)</td>
                <td>@Html.DisplayFor(modelItem => item.UzmanlikAlanlari)</td>
                <td>@Html.DisplayFor(modelItem => item.Salon.Ad)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>