@model IEnumerable<Berber.Models.Calisan>

@{
    ViewData["Title"] = "Çalışan Yönetimi";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Yeni Çalışan Ekle
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık Alanları</th>
            <th>Salon</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AdSoyad)</td>
                <td>@Html.DisplayFor(modelItem => item.UzmanlikAlanlari)</td>
                <td>@Html.DisplayFor(modelItem => item.Salon.Ad)</td>

                @* İKONLU BUTON GRUBU VE ÖZEL BUTON *@
                <td class="text-center">
                    <div class="btn-group btn-group-sm" role="group">

                        @* --- YENİ EKLENEN HİZMET ATAMA BUTONU --- *@
                        <a asp-action="AssignServices" asp-route-id="@item.Id" class="btn btn-success" title="Hizmet Ata">
                            <i class="fa-solid fa-link"></i>
                        </a>

                        @* SAATLER BUTONU *@
                        <a asp-controller="CalisanUygunluk" asp-action="Index" asp-route-calisanId="@item.Id" class="btn btn-success" title="Çalışma Saatleri">
                            <i class="fa-solid fa-clock"></i>
                        </a>

                        @* Düzenle *@
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Düzenle">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        @* Sil *@
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Sil">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>