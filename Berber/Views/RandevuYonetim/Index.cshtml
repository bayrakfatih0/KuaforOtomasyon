@model IEnumerable<Berber.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Onayları";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Müşteri</th>
            <th>Çalışan</th>
            <th>Hizmet</th>
            <th>Tarih ve Saat</th>
            <th>Durum</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @* Güvenli gösterim için Email'i kullanıyoruz *@
                    @Html.DisplayFor(modelItem => item.Musteri.Email)
                </td>

                @* 2. ÇALIŞAN ADI *@
                <td>@Html.DisplayFor(modelItem => item.Calisan.AdSoyad)</td>

                @* 3. HİZMET ADI *@
                <td>@Html.DisplayFor(modelItem => item.Hizmet.Ad)</td>

                @* TarihSaat Kullanımı Düzeltildi *@
                <td>@item.TarihSaat.ToString("dd.MM.yyyy") - @item.TarihSaat.ToString("HH:mm")</td>

                <td>
                    @* Durumları Enum ile karşılaştırıp görselleştiriyoruz *@
                    @if (item.Durum == Berber.Models.OnayDurumu.Bekliyor)
                    {
                        <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                    }
                    else if (item.Durum == Berber.Models.OnayDurumu.Onaylandi)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Reddedildi/İptal</span>
                    }
                </td>

                <td class="text-center">
                    <div class="btn-group btn-group-sm" role="group">

                        @* Sadece Onay Bekleyenlere işlem butonu göster *@
                        @if (item.Durum == Berber.Models.OnayDurumu.Bekliyor)
                        {
                            @* ONAYLA BUTONU (POST) *@
                            <form asp-action="Onayla" method="post" style="display:inline;">
                                @Html.AntiForgeryToken() @* Güvenlik Tokeni Eklendi *@
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-success" title="Randevuyu Onayla">
                                    <i class="fa-solid fa-check"></i>
                                </button>
                            </form>

                            @* REDDET BUTONU (POST) *@
                            <form asp-action="IptalEt" method="post" style="display:inline; margin-left:5px;">
                                @Html.AntiForgeryToken() @* Güvenlik Tokeni Eklendi *@
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger" title="Randevuyu Reddet">
                                    <i class="fa-solid fa-xmark"></i>
                                </button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted"><small>İşlem Yapıldı</small></span>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>