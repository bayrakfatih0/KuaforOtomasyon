@model IEnumerable<Berber.Models.Salon>

@{
    ViewData["Title"] = "Salon Yönetimi";
    // Bu, sol barda Title'ın altında görünecektir
    ViewData["ControllerName"] = "Salonlar";
}

<h1>@ViewData["ControllerName"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Yeni Salon Ekle
    </a>
</p>

@* Tabloya şık görünüm için yeni CSS sınıflarını (table-striped, table-hover, align-middle) ekledik *@
<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        @* Başlığı koyu renk yaptık *@
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ad)</th>
            <th>@Html.DisplayNameFor(model => model.Adres)</th>
            <th>@Html.DisplayNameFor(model => model.CalismaSaatleri)</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                <td>@item.Adres</td>
                <td>@item.CalismaSaatleri</td>

                @* İKONLU BUTON GRUBU *@
                <td class="text-center">
                    <div class="btn-group btn-group-sm" role="group">

                        @* Düzenle (Kalem) *@
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Düzenle">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        @* Detaylar (Bilgi) *@
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white" title="Detaylar">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                        @* Sil (Çöp Kutusu) *@
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Sil">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>