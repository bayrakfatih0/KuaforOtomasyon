@model Berber.Models.Hizmet

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<h4>@Model.Ad</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="SalonId" class="control-label"></label>
                <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId">
                    <option value="">-- Lütfen Bir Salon Seçin --</option>
                </select>
                <span asp-validation-for="SalonId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Sure" class="control-label">Süre (Dakika)</label>
                <input asp-for="Sure" class="form-control" type="number" />
                <span asp-validation-for="Sure" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ucret" class="control-label">Ücret (TL)</label>
                <input asp-for="Ucret" class="form-control" type="number" step="0.50" />
                <span asp-validation-for="Ucret" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}