@model Berber.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Detayları";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Hizmet: @Model.Ad</h4>
    <hr />

    @* Detayları 'Description List' (dl) ile göstermek standarttır *@
    <dl class="row">
        <dt class="col-sm-3">
            Hizmet Adı
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Ad)
        </dd>
        <dt class="col-sm-3">
            Süre (Dakika)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Sure)
        </dd>
        <dt class="col-sm-3">
            Ücret
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Ucret) TL
        </dd>
        <dt class="col-sm-3">
            Ait Olduğu Salon
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Salon.Ad)
        </dd>
    </dl>
</div>
<div class="mt-3">
    @* Kullanıcıyı 'Düzenle' sayfasına veya 'Listeye Geri' gönderme linkleri *@
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Listeye Geri Dön</a>
</div>