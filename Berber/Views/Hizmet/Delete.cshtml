@model Berber.Models.Hizmet

@{
    ViewData["Title"] = "Hizmeti Sil";
}


<h3 class="text-danger">Bu hizmeti silmek istediğinizden emin misiniz?</h3>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Hizmet Adı</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Ad)</dd>

        <dt class="col-sm-3">Salon</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Salon.Ad)</dd>

        <dt class="col-sm-3">Ücret</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Ucret) TL</dd>
    </dl>

    @* Bu form, silme işlemini ONAYLAR *@
    <form asp-action="Delete">
        @* Hangi hizmeti sileceğimizi bilmek için gizli Id'yi ekliyoruz *@
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Evet, Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">İptal Et</a>
    </form>
</div>