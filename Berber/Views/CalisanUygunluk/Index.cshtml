@model IEnumerable<Berber.Models.CalisanUygunluk>

@{
    var calisanAd = ViewData["CalisanAd"];
    var calisanId = ViewData["CalisanId"];
    ViewData["Title"] = $"{calisanAd} - Çalışma Saatleri";
}

<h1>@calisanAd - Çalışma Saatleri</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Gün</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* DayOfWeek İngilizce gelir (Monday), bunu Türkçeye çevirmek için basit bir yöntem *@
                <td>
                    @System.Globalization.CultureInfo.GetCultureInfo("tr-TR").DateTimeFormat.DayNames[(int)item.Gun]
                </td>
                <td>@item.BaslangicSaati.ToString(@"hh\:mm")</td>
                <td>@item.BitisSaati.ToString(@"hh\:mm")</td>
                <td>
                    @* Silerken de hangi kaydı sildiğimizi yolluyoruz *@
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<p>
    <a asp-action="Create" asp-route-calisanId="@calisanId" class="btn btn-primary">Yeni Saat Ekle</a>
    <a asp-controller="Calisan" asp-action="Index" class="btn btn-outline-secondary">Çalışan Listesine Dön</a>
</p>