@model IEnumerable<Berber.Models.Salon> 

@{
    ViewData["Title"] = "Ana Sayfa";
}

@* --- 1. ADMIN/KULLANICI ROL KONTROLÜ --- *@

@* Eğer ADMIN ise, SADECE DASHBOARD KARTLARINI GÖSTER *@
@if (User.IsInRole("Admin"))
{
    @* Sizin gönderdiğiniz Özet Kartları Kodu *@
    <div class="row">
        <div class="col-12 mb-4">
            <h1>Yönetici Dashboard</h1>
            <p class="lead">Sistem özetini aşağıda görebilirsiniz.</p>
        </div>
        
        @* Bu kısım, Toplam Bekleyen Randevu, Çalışan Sayısı vb. static kartları içerir *@
        
        @* 1. Bekleyen Randevu Sayısı *@
        <div class="col-xl-3 col-md-6 mb-4">
             <div class="card border-left-primary shadow h-100 py-2">
                 <div class="card-body">
                     <div class="row no-gutters align-items-center">
                         <div class="col mr-2">
                             <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Toplam Bekleyen Randevu</div>
                             <div class="h5 mb-0 font-weight-bold text-gray-800">5</div>
                         </div>
                         <div class="col-auto"><i class="fas fa-calendar-alt fa-2x text-gray-300"></i></div>
                     </div>
                 </div>
             </div>
        </div>
        
        @* ... (Diğer Özet Kartları: Çalışan Sayısı, Müşteri Sayısı) ... *@
        @* Kullanıcının gönderdiği kodda olan diğer kartlar buraya eklenebilir *@
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Toplam Çalışan Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">25</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-calendar-alt fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Toplam Müşteri Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">314</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-calendar-alt fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}else
{
    <div class="text-center mb-5">
        <h1 class="display-4">Randevu Almak İster Misiniz?</h1>
        <p class="lead">Lütfen randevu almak istediğiniz salonumuzu seçin.</p>
    </div>

    @* Salonları Yan Yana Kartlar Halinde Göster *@
    <div class="row">
        @foreach (var salon in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card border-primary h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">@salon.Ad</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Adres:</strong> @salon.Adres
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Çalışma Saatleri: @salon.CalismaSaatleri</small>
                        </p>
                    </div>
                    <div class="card-footer text-center bg-white border-0 pb-3">

                        @* SADECE GİRİŞ YAPMIŞ VE ADMIN OLMAYANLARA GÖSTER *@
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            @* --- HATA GİDERME: URL'Yİ MANUEL YAZIYORUZ --- *@
                            <a href="/Randevu/Index?salonId=@salon.Id"
                               class="btn btn-lg btn-primary w-100">
                                Randevu Al
                            </a>
                        }
                        else
                        {
                            @* Giriş Yapılmamışsa Login sayfasına yönlendir (Bu zaten çalışıyordu) *@
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-lg btn-secondary w-100">
                                Giriş Yap & Randevu Al
                            </a>
                        }
                    </div>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="col-12 text-center">
                <div class="alert alert-warning">
                    Henüz sisteme kayıtlı bir salon bulunmamaktadır.
                </div>
            </div>
        }
    </div>
}