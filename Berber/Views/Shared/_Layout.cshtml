@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
@{
    string fullEmail = User.Identity?.Name ?? "";
    string displayedUsername = fullEmail.Contains("@") ? fullEmail.Split('@')[0] : fullEmail;
}
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Berber Otomasyon Sistemi</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.2/zephyr/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Berber.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <nav id="sidebar-wrapper" class="bg-primary text-white border-right d-flex flex-column">

            <div class="sidebar-heading">Berberim</div>

            <div class="list-group list-group-flush flex-grow-1">

                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action text-white">
                    <i class="fas fa-fw fa-tachometer-alt me-2"></i> Dashboard
                </a>

                @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
                {
                    <a asp-controller="Randevu" asp-action="Randevularim" class="list-group-item list-group-item-action text-white">
                        <i class="fas fa-fw fa-calendar-alt me-2"></i> Randevularım
                    </a>
                }

                @if (User.IsInRole("Admin"))
                {
                    <h6 class="sidebar-subtitle">YÖNETİM</h6>
                    <a asp-controller="Salon" asp-action="Index" class="list-group-item list-group-item-action text-white">Salonlar</a>
                    <a asp-controller="Hizmet" asp-action="Index" class="list-group-item list-group-item-action text-white">Hizmetler</a>
                    <a asp-controller="Calisan" asp-action="Index" class="list-group-item list-group-item-action text-white">Çalışanlar</a>
                    <a asp-controller="RandevuYonetim" asp-action="Index" class="list-group-item list-group-item-action text-white">Randevu Onayları</a>
                }
            </div>

            <div class="sidebar-footer-links">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a href="#" class="list-group-item list-group-item-action text-white">
                        <i class="fas fa-fw fa-cog me-2"></i> Ayarlar
                    </a>

                    <form id="logoutForm" class="form-inline m-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                        <button id="logout" type="submit" class="list-group-item list-group-item-action text-white border-0 w-100">
                            <i class="fas fa-fw fa-sign-out-alt me-2"></i> Çıkış
                        </button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="list-group-item list-group-item-action text-white">
                        <i class="fas fa-fw fa-sign-in-alt me-2"></i> Giriş Yap
                    </a>
                }
            </div>
        </nav>
        <div id="page-content-wrapper" class="flex-grow-1">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
                <div class="container mt-3">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Başarılı!</strong> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Hata!</strong> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                </div>
                <div class="container-fluid">
                    <h5 class="mb-0">@ViewData["Title"]</h5>


                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">

                        <li class="nav-item me-4">
                            <a class="nav-link position-relative" href="#">
                                <i class="fas fa-bell text-warning"></i>
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                           
                                @displayedUsername
                            </a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Profilim</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Ayarlar</a>
                            </div>
                        </li>
                    </ul>

                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
@if (User.Identity.IsAuthenticated && User.IsInRole("Musteri") && !User.IsInRole("Admin"))
    {
        <div id="ai-chat-bubble" onclick="toggleChat()" style="position: fixed; bottom: 30px; right: 30px; width: 60px; height: 60px; background: #007bff; borderRadius: 50%; display: flex; align-items: center; justify-content: center; cursor: pointer; box-shadow: 0 4px 15px rgba(0,0,0,0.3); z-index: 9999;">
    <i class="fas fa-robot" style="color: white; font-size: 24px;"></i>
    </div>

    <div id="ai-chat-window" style="position: fixed; bottom: 100px; right: 30px; width: 350px; height: 500px; background: white; border-radius: 15px; box-shadow: 0 5px 25px rgba(0,0,0,0.2); display: none; flex-direction: column; overflow: hidden; z-index: 9999; border: 1px solid #eee;">
    <div style="background: #007bff; color: white; padding: 15px; font-weight: bold; display: flex; justify-content: space-between;">
        <span><i class="fas fa-magic"></i> AI Randevu Asistanı</span>
        <i class="fas fa-times" onclick="toggleChat()" style="cursor: pointer;"></i>
    </div>
    
    <div id="chat-content" style="flex: 1; padding: 15px; overflow-y: auto; background: #f9f9f9; display: flex; flex-direction: column; gap: 10px;">
        <div style="align-self: flex-start; background: #e9ecef; padding: 10px; border-radius: 10px; max-width: 80%; font-size: 14px;">
            Merhaba! Ben akıllı asistanınız. Size nasıl bir randevu ayarlayabilirim?
        </div>
    </div>

    <div style="padding: 15px; border-top: 1px solid #eee; display: flex; gap: 10px;">
        <input type="text" id="user-msg" placeholder="Mesajınızı yazın..." style="flex: 1; border: 1px solid #ddd; padding: 8px; border-radius: 20px; outline: none;">
        <button onclick="sendLiveMessage()" style="background: #007bff; color: white; border: none; width: 35px; height: 35px; border-radius: 50%; cursor: pointer;">
            <i class="fas fa-paper-plane"></i>
        </button>
    </div>
    </div>

    <script>
    function toggleChat() {
        const window = document.getElementById('ai-chat-window');
        window.style.display = window.style.display === 'none' ? 'flex' : 'none';
    }

    async function sendLiveMessage() {
        const input = document.getElementById('user-msg');
        const chatContent = document.getElementById('chat-content');
        if (!input.value.trim()) return;

        // Kullanıcı mesajını ekle
        chatContent.innerHTML += `<div style="align-self: flex-end; background: #007bff; color: white; padding: 10px; border-radius: 10px; max-width: 80%; font-size: 14px;">${input.value}</div>`;
    
        const userPrompt = input.value;
        input.value = '';
        chatContent.scrollTop = chatContent.scrollHeight;

        // AI "Düşünüyor..." göstergesi
        const typingId = "typing-" + Date.now();
        chatContent.innerHTML += `<div id="${typingId}" style="align-self: flex-start; background: #e9ecef; padding: 10px; border-radius: 10px; font-size: 12px; font-style: italic;">Asistan düşünüyor...</div>`;

        // API İsteği (Gerçek LLM Entegrasyonu için Controller'a gider)
        try {
            const response = await fetch('/AI/ProcessLiveRequest', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `requestText=${encodeURIComponent(userPrompt)}`
            });
            const data = await response.json();
        
            document.getElementById(typingId).remove();
            chatContent.innerHTML += `<div style="align-self: flex-start; background: #e9ecef; padding: 10px; border-radius: 10px; max-width: 80%; font-size: 14px;">${data.message}</div>`;
        } catch (e) {
            document.getElementById(typingId).innerText = "Üzgünüm, bir hata oluştu.";
        }
        chatContent.scrollTop = chatContent.scrollHeight;
        const data = await response.json();

        if (data.success) {
            // Randevu alındıysa 2 saniye sonra sayfayı yenileyelim ki randevularım kısmında görsün
            setTimeout(() => {
                window.location.reload();
            }, 3000);
        }
    }
    </script>    
}
</body>
</html>