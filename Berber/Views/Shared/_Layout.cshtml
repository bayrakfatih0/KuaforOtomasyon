@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
@{
    string fullEmail = User.Identity?.Name ?? "";
    string displayedUsername = fullEmail.Contains("@") ? fullEmail.Split('@')[0] : fullEmail;
}
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Berber Otomasyon Sistemi</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.2/zephyr/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Berber.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <nav id="sidebar-wrapper" class="bg-primary text-white border-right d-flex flex-column">

            <div class="sidebar-heading">Berberim</div>

            <div class="list-group list-group-flush flex-grow-1">

                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action text-white">
                    <i class="fas fa-fw fa-tachometer-alt me-2"></i> Dashboard
                </a>

                @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
                {
                    <a asp-controller="Randevu" asp-action="Randevularim" class="list-group-item list-group-item-action text-white">
                        <i class="fas fa-fw fa-calendar-alt me-2"></i> Randevularım
                    </a>
                }

                @if (User.IsInRole("Admin"))
                {
                    <h6 class="sidebar-subtitle">YÖNETİM</h6>
                    <a asp-controller="Salon" asp-action="Index" class="list-group-item list-group-item-action text-white">Salonlar</a>
                    <a asp-controller="Hizmet" asp-action="Index" class="list-group-item list-group-item-action text-white">Hizmetler</a>
                    <a asp-controller="Calisan" asp-action="Index" class="list-group-item list-group-item-action text-white">Çalışanlar</a>
                    <a asp-controller="RandevuYonetim" asp-action="Index" class="list-group-item list-group-item-action text-white">Randevu Onayları</a>
                }
            </div>

            <div class="sidebar-footer-links">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a href="#" class="list-group-item list-group-item-action text-white">
                        <i class="fas fa-fw fa-cog me-2"></i> Ayarlar
                    </a>

                    <form id="logoutForm" class="form-inline m-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                        <button id="logout" type="submit" class="list-group-item list-group-item-action text-white border-0 w-100">
                            <i class="fas fa-fw fa-sign-out-alt me-2"></i> Çıkış
                        </button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="list-group-item list-group-item-action text-white">
                        <i class="fas fa-fw fa-sign-in-alt me-2"></i> Giriş Yap
                    </a>
                }
            </div>
        </nav>
        <div id="page-content-wrapper" class="flex-grow-1">

            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
                <div class="container mt-3">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Başarılı!</strong> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Hata!</strong> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                </div>
                <div class="container-fluid">
                    <h5 class="mb-0">@ViewData["Title"]</h5>


                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">

                        <li class="nav-item me-4">
                            <a class="nav-link position-relative" href="#">
                                <i class="fas fa-bell text-warning"></i>
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                           
                                @displayedUsername
                            </a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Profilim</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Ayarlar</a>
                            </div>
                        </li>
                    </ul>

                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <button class="btn btn-primary btn-lg rounded-circle shadow-lg"
            data-bs-toggle="modal" data-bs-target="#aiChatModal"
            style="position: fixed; bottom: 20px; right: 20px; z-index: 1050; width: 60px; height: 60px;">
        <i class="fas fa-robot"></i>
    </button>

    <div class="modal fade" id="aiChatModal" tabindex="-1" aria-labelledby="aiChatModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="aiChatModalLabel"><i class="fas fa-brain"></i> AI Asistanı</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="ProcessRequest" asp-controller="AI" method="post">
                    <div class="modal-body">
                        <p class="text-muted small">İstediğiniz randevuyu doğal dilde yazın. Örneğin: "Yarın 14:00'te saç kesimi."</p>

                        @* Eğer TempData'da hata varsa, burada gösterilir. *@
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }

                        <div class="form-group mb-3">
                            <textarea name="requestText" class="form-control" rows="3"
                                      placeholder="Randevu isteğinizi buraya yazın..." required></textarea>
                        </div>

                        @* Eğer yönlendirme sonrası hata mesajı gösterilecekse, modalın otomatik açılması için JavaScript ekleyeceğiz. *@

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-success"><i class="fas fa-magic"></i> Randevu Ara</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Eğer Controller'dan bir hata mesajı TempData ile geldiyse, modalı otomatik aç.
        // Bu, kullanıcı yönlendirildikten sonra hatasını görebilmesi için kritiktir.
        $(document).ready(function () {
            if ('@TempData["ErrorMessage"]' !== '') {
                var modal = new bootstrap.Modal(document.getElementById('aiChatModal'));
                modal.show();
            }
        });
    </script>

</body>
</html>