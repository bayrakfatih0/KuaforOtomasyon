@model IEnumerable<Berber.Models.Randevu>

@{
    ViewData["Title"] = "Randevularım";
}

<h1>@ViewData["Title"]</h1>

@* Müşteri randevularını listelemek için standart şablonu uyguluyoruz *@
<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Hizmet</th>
            <th>Çalışan</th>
            <th>Salon</th>
            <th>Tarih ve Saat</th>
            <th>Durum</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Hizmet.Ad)</td>
                <td>@Html.DisplayFor(modelItem => item.Calisan.AdSoyad)</td>
                <td>@Html.DisplayFor(modelItem => item.Hizmet.Salon.Ad)</td>

                @* Tarih ve Saati formatlıyoruz *@
                <td>@item.TarihSaat.ToString("dd.MM.yyyy") - @item.TarihSaat.ToString("HH:mm")</td>

                @* Durumları görselleştiriyoruz *@
                <td>
                    @if (item.Durum == Berber.Models.OnayDurumu.Bekliyor)
                    {
                        <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                    }
                    else if (item.Durum == Berber.Models.OnayDurumu.Onaylandi)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">İptal Edildi</span>
                    }
                </td>

                @* Randevu iptal butonu *@
                <td class="text-center">
                    @* Sadece onaylanmamış randevular iptal edilebilir *@
                    @if (item.Durum == Berber.Models.OnayDurumu.Bekliyor || item.Durum == Berber.Models.OnayDurumu.Onaylandi)
                    {
                        <form asp-controller="Randevu" asp-action="IptalEt" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Randevuyu İptal Et"
                                    onclick="return confirm('Randevuyu iptal etmek istediğinizden emin misiniz?');">
                                <i class="fa-solid fa-times"></i> İptal
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>