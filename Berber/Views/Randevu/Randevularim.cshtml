@model IEnumerable<Berber.Models.Randevu>

@{
    ViewData["Title"] = "Geçmiş Randevularım";
}

<h2 class="mb-4">Randevularım</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Henüz hiç randevunuz bulunmamaktadır. <a asp-controller="Home" asp-action="Index">Hemen randevu alın!</a>
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card border-secondary h-100 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <strong>@item.TarihSaat.ToString("dd MMMM yyyy - HH:mm")</strong>

                        @if (item.Durum == Berber.Models.OnayDurumu.Bekliyor)
                        {
                            <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                        }
                        else if (item.Durum == Berber.Models.OnayDurumu.Onaylandi)
                        {
                            <span class="badge bg-success">Onaylandı</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">İptal Edildi</span>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-primary">@item.Calisan.Salon.Ad</h5>
                        <p class="card-text">
                            <strong>Hizmet:</strong> @item.Hizmet.Ad<br />
                            <strong>Çalışan:</strong> @item.Calisan.AdSoyad<br />
                            <strong>Ücret:</strong> @item.Hizmet.Ucret TL
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}